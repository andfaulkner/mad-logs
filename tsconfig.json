{
    "version": "2.5.2",
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "outDir": "lib/",
        "declaration": true,

        "target": "ES5",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": false,
        "jsx": "preserve",
        "pretty": true,
        "lib": ["es2015"],
        "rootDir": "./"
    },
    "exclude": [
        "*.js",
        "*.json",
        "lib/*.d.ts",
        "lib/src/*.d.ts",
        "lib",
        "lib/src",
        "./lib",
        "./lib/src"
    ],
    "include": [
        "./shared.ts",
        "./index.ts",
        "./mad-logs-repl.ts",
        "./server-styles.ts",
        "./node.ts",
        "./src/build-file-tag-string.ts",
        "./src/theming.ts",
        "./src/isomorphic-styles.ts",
        "./test/*.ts",
        "./typings/index.d.ts"
    ]
}
