{
    "version": "3.3.3",
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "outDir": "lib/",
        "declaration": true,

        "esModuleInterop": true,

        "target": "ES5",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "removeComments": false,
        "jsx": "preserve",
        "pretty": true,
        "lib": ["es2015"],
        "rootDir": "./"
    },
    "exclude": [
        "*.js",
        "*.json",
        "lib"
    ],
    "include": [
        "./*.ts",
        "./src/*.ts",
        "./test/*.ts",
        "./typings/index.d.ts"
    ]
}
